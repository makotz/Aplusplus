<div style="text-align: center">
  <h1>Welcome to A Plus Plus</h1>
</div>

<% if user_signed_in? %>
  <div style="display:inline-block"><%= render "assessments/calendar" %></div>

  <h2>Priorities</h2>
  <% if @assessments.exists? %>
    <table border="1" style="width:100%">
      <thead>
        <tr>
          <td><%= sortable "title", "Assessment"%></td>
          <td><%= sortable "due_date", "Due Date"%></td>
          <td><%= sortable "weight", "Weight (%)"%></td>
        </tr>
      </thead>
        <% @assessments.each do |assessment| %>
        <tbody>
          <tr>
            <td><%= link_to "#{assessment.title}", edit_course_assessment_path(assessment.course, assessment) %>
              <%= link_to fa_icon("star"), important_path(assessment.course, assessment), method: :patch, class: "important-icon" %>
              <%= link_to "DELETE", course_assessment_path(assessment.course, assessment), method: :delete, data: {confirm: "Are you sure?"}%>
            </td>
            <td><%= assessment.due_date %></td>
          <td><%= assessment.weight %></td>
        </tbody>
        <% end %>
  <% end %>
<% end %>




